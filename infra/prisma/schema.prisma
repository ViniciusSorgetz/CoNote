generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id      String   @id @default(uuid())
  folders Folder[]
}

model Folder {
  id           Int      @id @default(autoincrement())
  name         String
  folders      Folder[] @relation("subFolders")
  notes        Note[]
  Guest        Guest?   @relation(fields: [guestId], references: [id])
  guestId      String?
  parentFolder Folder?  @relation("subFolders", fields: [folderId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  folderId     Int?
}

model Note {
  id       Int     @id @default(autoincrement())
  title    String
  content  String
  Folder   Folder? @relation(fields: [folderId], references: [id])
  folderId Int?
}
