{
  "scripts": {
    "dev": "next dev",
    "test": "concurrently --names next,jest --hide next --kill-others --success command-jest \"next dev\" \"jest\"",
    "test:watch": "jest --watch",
    "eslint:check": "eslint . --ext .ts",
    "commitlint:check": "commitlint",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "prepare": "husky",
    "prisma:push": "prisma db push --schema=infra/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=infra/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "async-retry": "^1.3.3",
    "jest": "^29.7.0",
    "next": "^15.2.4",
    "prisma": "^6.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@types/async-retry": "^1.4.9",
    "@types/jest": "^29.5.14",
    "@types/node": "22.13.14",
    "@types/react": "19.0.12",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "eslint-config-next": "15.2.4",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2"
  },
  "prisma": {
    "schema": "infra/prisma/schema.prisma"
  }
}
